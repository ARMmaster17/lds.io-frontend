.container
  div.alert.alert-warning(ng-if="!OA.freshAccount")
    p
      | It has been 3 months or more since you last verified the phone number and email addresss associated
      | with your LDS Account.
    p
      | You will be asked to verify them before managing or creating apps.
  div.alert.alert-danger(ng-if="!OA.hasPhone || !OA.hasEmail")
    p(ng-if="!OA.hasPhone")
      strong No phone number
      span &#32;is listed in your LDS Account.

    p(ng-if="!OA.hasEmail")
      strong No email address
      span &#32;is listed in your LDS Account.
    p
      span &#32;Please add it to both&#32;
    ul
      li
        a(href="https://ldsaccount.lds.org/?lang=eng#detail=contact" target="_blank") LDS Account Contact & Recovery
      li
        strong My Household
        span &#32;in&#32;
        a(href="https://www.lds.org/directory/?lang=eng#x" target="_blank") LDS Ward Directory

  //-h3 App Settings
  //-p.small Possible app settings here

  h3 Your Apps

  .row
    .panel.panel-info(style="display: inline-block;")
      table.table
        tr(ng-show="0 === OA.clients.length")
          th There are no apps on file yet.
        tr(ng-hide="0 === OA.clients.length")
          th Name
          th URL
          th ID
          th Secret
          th Permissions

        tr(ng-repeat="client in OA.clients")
          td
            span(ng-bind="client.name")
          td
            span(ng-bind="client.url")
          td
            span(ng-bind="client.id")
          td
            span(ng-bind="client.secret")
          //- TODO: display the arrays fancily
          td
            span(ng-bind="client.permissions")
          //- TODO: stats (x stakes, x wards, x members)

      div(ng-repeat="client in OA.clients")
        strong {{ client.name }}
        br
        span {{ client.desc }}
        br
        span {{ client.url }}
        br
        span {{ client.createdAt }}
        br
        span {{ client.updatedAt }}
        br
        div(ng-repeat="pair in client.apikeys")
          span(ng-if="pair.insecure")
            span(ng-if="pair.test") Development
            span(ng-if="!pair.test") Production
            span &#32;Browser / Mobile
          span(ng-if="!pair.insecure")
            span(ng-if="pair.test") Development
            span(ng-if="!pair.test") Production
            span &#32;Server
          br
          span {{ pair.key }}
          br
          span {{ pair.secret }}
          br

  .row
    h3 Register an App

    form(role="form", ng-submit="OA.addApp()")
      .form-group
        input.form-control(type="text", placeholder="Name", ng-model="OA.appName")
      .form-group
        input.form-control(type="text", placeholder="Secret (Optional)", ng-model="OA.appSecret")
      button.btn.btn-default(type="submit") Add
